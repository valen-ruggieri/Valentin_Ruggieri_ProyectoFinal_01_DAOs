<!DOCTYPE html>
<html lang="en">
<head>
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
    crossorigin="anonymous"
  />
  <link rel="icon" href="https://cdn-icons.flaticon.com/png/512/477/premium/477420.png?token=exp=1655051858~hmac=8e4fa86d16d6faf71249f9d4781dda8e"/>

<link rel="stylesheet" href="../style.css" />

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel Admin</title>
</head>
<body id="bodyPanelAdmin">
<div class="bg-black">
  <h1 id="titlePanelAdmin">PANEL ADMIN</h1>

<span class="hrShop"></span>
</div>
<%- include('../partials/navBar.ejs') %> 
    <% if(productos.length){%> 
        <div class="d-flex flex-row row ms-2 mb-5">
        <% productos.forEach((producto ,key) => { %> 
            <div class="card  m-5 cardProduct" style="width: 15rem;">
              <img src="../images/<%=  producto.img %>" class="cardImage" width="150px" height="150px" alt="<%= producto.img %>" >
                <div class="card-body   ">
                  <a  class="aLinkToProduct "><h5 class="card-title"><%= producto.titulo %></h5></a>
                  <p class=" cardDescrption"><small ><%= producto.descripcion %> </small></p>
                 <div class="contentPriceAndCode">
                  <p class=" cardPrice">$<%= producto.precio %> </p>
                  <p class=" cardCode">ID :  <%= producto.codigo %></p>
                 
                 </div>
                  <a href="/api/productos/delete/<%= producto._id %> " class="w-100 deleteAdmin badge "><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash iconAdmin" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                  </svg></a>
                  <a href="/api/productos/update/<%= producto._id %> " class="w-100  updateAdmin badge "><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square iconAdmin" viewBox="0 0 16 16">
                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                  </svg></a>

                </div>
              </div>
             
              <% }) %>
                </div>
          

    
    <% }else{  %> 
      <div class=" ms-2 mb-5 ">
        <h1 class="  text-dark dontProductText text-opacity-10">There are no products</h1>
      </div>
    <% } %> 
<script src="./socket.io/socket.io.min.js"></script>
<script src="chat.js"></script>
</body>
</html>